FROM {{ base_image }}

ADD . /var/www
COPY default.conf /etc/nginx/conf.d/default.conf
COPY hi-task-scheduler /etc/cron.d/hi-task-scheduler
RUN chown -R www-data:www-data /var/www
RUN echo "max_execution_time = 600" >> /etc/php/7.4/fpm/conf.d/custom-php.ini
RUN echo "memory_limit = 1024M" >> /etc/php/7.4/fpm/conf.d/custom-php.ini
